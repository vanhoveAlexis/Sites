{% extends 'base.html.twig'%}
{% block title %}Contactez-nous{% endblock %}
{% block body %}
<form class="form-horizontal">
 <div class="form-group">
   <label class="control-label col-sm-2" for="Nom">Nom(obligatoire):</label>
   <div class="col-sm-10">
     <input type="Nom" class="form-control" id="Nom" placeholder="VANHOVE" required="required">
   </div>
 </div>
 <div class="form-group">
   <label class="control-label col-sm-2" for="Prenom">Prenom:</label>
   <div class="col-sm-10">
     <input type="Prenom" class="form-control" id="Prenom" placeholder="Philippe" required="required">
   </div>
 </div>
 <div class="form-group">
   <label class="control-label col-sm-2" for="Ville">Ville(obligatoire):</label>
   <div class="col-sm-10">
     <input type="Ville" class="form-control" id="Ville" placeholder="Musiege" required="required">
   </div>
 </div>
 <div class="form-group">
   <label class="control-label col-sm-2" for="Tel">Telephone:</label>
   <div class="col-sm-10">
     <input type="Tel" class="form-control" id="Tel" placeholder="0626049444">
   </div>
 </div>
 <div class="form-group">
   <label class="control-label col-sm-2" for="email">Email(obligatoire):</label>
   <div class="col-sm-10">
     <input type="email" class="form-control" id="Nom" placeholder="philip'alarme@gmail.com" required="required">
   </div>
 </div>
 <label class=ml-3 for="foodChoice">Objet : </label>
  <select name="food" id="foodChoice">
       <option value="frites">Renseignements</option>
       <option value="kebab">Devis</option>
       <option value="steak">Reclamations</option>
       <option value="vegan">Autres... ( Ã  preciser dans le message )</option>
 </select>
 <div class="form-group">
   <label class="control-label col-sm-2" for="Message">Message(obligatoire):</label>
   <div class="col-sm-10">
     <input type="Message" class="form-control" id="Nom" placeholder="Votre message" required="required">
   </div>
 </div>
 <div class="form-group">
   <div class="col-sm-offset-2 col-sm-10">
     <button type="submit" class="btn btn-default">Submit</button>
   </div>
 </div>
</form>
{% endblock %}
